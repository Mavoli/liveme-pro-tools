{
    "name": "liveme-pro-tools",
    "version": "1.217.20181214",
    "description": "Tools for Live.me video network",
    "homepage": "https://notabug.org/thecoder1975/liveme-pro-tools",
    "main": "src/electron/index.js",
    "repository": {
        "type": "git",
        "url": "https://notabug.org/thecoder1975/liveme-pro-tools"
    },
    "scripts": {
        "postinstall": "cd src/electron && npm install",
        "start": "./node_modules/.bin/electron ./src/electron/index.js --enable-logging",
        "dev": "NODE_ENV='development' npm run start",
        "start-core": "dotnet run --project  ./src/core",
        "watch-core": "dotnet watch --project ./src/core run",
        "release-core-mac": "dotnet publish  ./src/core -r osx.10.11-x64 --output bin/dist/osx -c release /p:TrimUnusedDependencies=true",
        "release-core-win": "dotnet publish  ./src/core -r win-x64 --output bin/dist/win -c release /p:TrimUnusedDependencies=true",
        "release-core-linux": "dotnet publish  ./src/core -r linux-x64 --output bin/dist/linux -c release /p:TrimUnusedDependencies=true",
        "release-win": "npm run release-core-win && build -w",
        "release-linux": "npm run release-core-linux && build -l",
        "release-mac": "npm run release-core-mac && build -m",
        "release": "npm run release-mac && npm run release-win && npm run release-linux"
    },
    "author": "TheCoder75",
    "license": "GPL-3.0",
    "build": {
        "appId": "com.thecoderstoolbox.livemeprotools",
        "files": [
            "**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "output": "./dist",
            "app": "./src/electron"
        },
        "productName": "LiveMe Pro Tools",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "linux": {
            "target": [
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "extraResources": [
                {
                    "from": "src/core/bin/dist/linux",
                    "to": "core/bin/dist/linux",
                    "filter": [
                        "**/*",
                        "!foo/*.js"
                    ]
                }
            ],
            "category": "Network",
            "description": "Browse, search and manage accounts, replays and more without the need of an actual account on Live.me.",
            "maintainer": "thecoder1975@gmail.com"
        },
        "win": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "extraResources": [
                {
                    "from": "src/core/bin/dist/win",
                    "to": "core/bin/dist/win",
                    "filter": [
                        "**/*",
                        "!foo/*.js"
                    ]
                }
            ],
            "icon": "src/electron/build/appicon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true
        },
        "mac": {
            "category": "public.app-category.video",
            "target": [
                "zip"
            ],
            "extraResources": [
                {
                    "from": "src/core/bin/dist/mac",
                    "to": "core/bin/dist/mac",
                    "filter": [
                        "**/*",
                        "!foo/*.js"
                    ]
                }
            ],
            "identity": null,
            "icon": "src/electron/build/appicon.icns"
        }
    },
    "devDependencies": {
        "electron": "^1.8.6",
        "electron-builder": "^19.56.0"
    }
}
