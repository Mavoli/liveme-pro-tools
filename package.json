{
    "name": "liveme-pro-tools",
    "version": "1.222.20181225",
    "description": "Tools for Live.me video network",
    "homepage": "https://notabug.org/thecoder1975/liveme-pro-tools",
    "main": "src/electron/index.js",
    "repository": {
        "type": "git",
        "url": "https://notabug.org/thecoder1975/liveme-pro-tools"
    },
    "scripts": {
        "postinstall": "cd src/electron && npm install",
        "start": "./node_modules/.bin/electron ./src/electron/index.js --enable-logging",
        "dev": "NODE_ENV='development' npm run start",
        "release": "build -w && build -l && build -m",
        "release-win": "build -w",
        "release-linux": "build -m"
    },
    "author": "TheCoder75",
    "license": "GPL-3.0",
    "build": {
        "appId": "com.thecoderstoolbox.livemeprotools",
        "files": [
            "**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "output": "./dist",
            "app": "./src/electron"
        },
        "productName": "LiveMe Pro Tools",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "asar": true,
        "linux": {
            "target": [{
                "target": "tar.gz",
                "arch": [
                    "x64",
                    "ia32"
                ]
            }],
            "category": "Network",
            "description": "Browse, search and manage accounts, replays and more without the need of an actual account on Live.me.",
            "maintainer": "thecoder1975@gmail.com"
        },
        "win": {
            "target": [{
                "target": "zip",
                "arch": [
                    "x64",
                    "ia32"
                ]
            }],
            "icon": "src/electron/build/appicon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true
        },
        "mac": {
            "category": "public.app-category.video",
            "target": [
                "zip"
            ],
            "identity": null,
            "icon": "src/electron/build/appicon.icns"
        }
    },
    "devDependencies": {
        "electron": "^1.8.6",
        "electron-builder": "^19.56.0"
    }
}